---
import { Image } from "astro:assets";
import logo from "../../public/favicon.svg";
import { info } from "../data/info";
import AccessTimeIcon from "@mui/icons-material/AccessTime";
import PhoneOutlinedIcon from "@mui/icons-material/PhoneOutlined";
import EmailOutlinedIcon from "@mui/icons-material/EmailOutlined";
import LocationOnOutlinedIcon from "@mui/icons-material/LocationOnOutlined";
import { Button } from "@material-tailwind/react";
---

<div class="flex flex-col gap-8 md:flex-row md:justify-between my-12">
  <section class="md:basis-1/2">
    <Image src={logo} alt="One Ok Web Design Logo" width={300} />
    <p class="my-6 max-w-[400px]">{info.descriptionFooter}</p>
    <Button as="a" href="/contact" className="uppercase">Get Started Today</Button>
  </section>

  <section class="flex flex-col gap-4">
    <h2 class="uppercase font-bold">Quick Links</h2>

    <div class="grid grid-cols-2 gap-12 w-[250px]">
      <div class="flex flex-col">
        <a href="/about">About</a>
        <a href="/services">Web Design</a>
      </div>

      <div class="flex flex-col">
        <a href="/portfolio">Portfolio</a>
        <a href="/pricing">Pricing</a>
      </div>
    </div>
  </section>

  <section class="flex flex-col gap-4">
    <h2 class="uppercase font-bold">Contact Information</h2>

    <div class="flex items-center gap-2">
      <AccessTimeIcon />
      <p>{info.workingHours}</p>
    </div>

    <div class="flex items-center gap-2">
      <PhoneOutlinedIcon />
      <p><a href=`tel:${info.phoneValue}`>{info.phoneDisplay}</a></p>
    </div>

    <div class="flex items-center gap-2">
      <EmailOutlinedIcon />
      <p><a href=`mailto:${info.email}`>{info.email}</a></p>
    </div>

    <div class="flex items-center gap-2">
      <LocationOnOutlinedIcon />
      <p>{info.location}</p>
    </div>
  </section>
</div>
